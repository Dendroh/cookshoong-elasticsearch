{
  "index_patterns": [
    "store*"
  ],
  "settings": {
    "index": {
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "discard_punctuation": "false",
            "user_dictionary": "analysis/userdict.txt"
          },
          "my_ngram_tokenizer": {
            "token_chars": [
              "letter",
              "digit",
              "punctuation",
              "symbol"
            ],
            "min_gram": "2",
            "type": "ngram",
            "max_gram": "3"
          }
        },
        "filter": {
          "edge_ngram_filter_front" : {
            "type" : "edge_ngram",
            "min_gram" : "1",
            "max_gram" : "20"
          },
          "edge_ngram_filter_back" : {
            "type" : "edge_ngram",
            "min_gram" : "1",
            "max_gram" : "20",
            "side" : "back"
          },
          "whitespace_remove_filter" : {
            "type" : "pattern_replace",
            "pattern" : " ",
            "replacement" : ""
          },
          "my_synonym_filter": {
            "type": "synonym",
            "synonyms_path": "analysis/synonym.txt"
          }
        },
        "analyzer": {
          "my_nori_analyzer": {
            "type": "custom",
            "filter": ["lowercase", "trim", "whitespace_remove_filter",
              "my_synonym_filter", "nori_part_of_speech", "nori_readingform"],
            "char_filter": ["html_strip"],
            "tokenizer": "my_nori_tokenizer"
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "store_status_code": {
        "type": "keyword"
      },
      "count_review": {
        "type": "keyword"
      },
      "count_rating": {
        "type": "keyword"
      },
      "location": {
        "type": "geo_point"
      },
      "name": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "description": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "menus": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "place": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "categories": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "keywordText": {
        "type": "text",
        "analyzer": "my_nori_analyzer",
        "search_analyzer": "my_nori_analyzer"
      }
    }
  }
}
