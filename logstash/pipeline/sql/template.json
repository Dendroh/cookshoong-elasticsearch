{
  "index_patterns": [
    "store*"
  ],
  "settings": {
    "index": {
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "discard_punctuation": "false"
          }
        },
        "analyzer": {
          "my_nori_analyzer": {
            "filter": [
              "lowercase",
              "trim",
              "nori_readingform",
              "stopwords",
              "nori_part_of_speech",
              "synonym"
            ],
            "tokenizer": "my_nori_tokenizer"
          }
        },
        "filter": {
          "stopwords": {
            "type": "stop",
            "stopwords": [
              " "
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "store_id": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "copy_to": [
          "keywordText"
        ],
        "analyzer": "my_nori_analyzer"
      },
      "description": {
        "type": "text",
        "copy_to": [
          "keywordText"
        ],
        "analyzer": "my_nori_analyzer"
      },
      "keywordText": {
        "type": "text",
        "analyzer": "my_nori_analyzer",
        "search_analyzer": "my_nori_analyzer"
      }
    }
  }
}
