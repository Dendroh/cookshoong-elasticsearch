{
  "index_patterns": [
    "store*"
  ],
  "settings": {
    "index": {

      "analysis": {

        "filter": {
          "whitespace_remove_filter" : {
            "type" : "pattern_replace",
            "pattern" : " ",
            "replacement" : ""
          },
          "my_synonym_filter": {
            "type": "synonym",
            "synonyms_path": "analysis/synonym.txt"
          },
          "suggest_filter": {
            "type": "edge_ngram",
            "min_gram": 1,
            "max_gram": 500
          }
        },

        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "discard_punctuation": "false",
            "user_dictionary": "analysis/userdict.txt"
          },
          "jaso_search_tokenizer": {
            "type": "jaso_tokenizer",
            "mistype": true,
            "chosung": false
          },
          "jaso_index_tokenizer": {
            "type": "jaso_tokenizer",
            "mistype": true,
            "chosung": true
          }
        },

        "analyzer": {
          "my_nori_analyzer": {
            "type": "custom",
            "tokenizer": "my_nori_tokenizer",
            "filter": [
              "lowercase",
              "trim",
              "whitespace_remove_filter",
              "my_synonym_filter",
              "nori_part_of_speech",
              "nori_readingform"
            ],
            "char_filter": [
              "html_strip"
            ]
          },
          "suggest_index_analyzer": {
            "type": "custom",
            "tokenizer": "jaso_index_tokenizer",
            "filter": [
              "lowercase",
              "trim",
              "whitespace_remove_filter",
              "my_synonym_filter",
              "suggest_filter"
            ],
            "char_filter": [
              "html_strip"
            ]
          },
          "suggest_search_analyzer": {
            "type": "custom",
            "tokenizer": "jaso_search_tokenizer"
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "store_status_code": {
        "type": "keyword"
      },
      "count_review": {
        "type": "keyword"
      },
      "count_rating": {
        "type": "keyword"
      },
      "location": {
        "type": "geo_point"
      },
      "name": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "categories": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "place": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "menus": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "description": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "keywordText": {
        "type": "text",
        "fields": {
          "keyword_jamo": {
            "analyzer": "suggest_index_analyzer",
            "search_analyzer": "suggest_search_analyzer",
            "type": "text"
          },
          "keyword_nori": {
            "analyzer": "my_nori_analyzer",
            "search_analyzer": "my_nori_analyzer",
            "type": "text"
          }
        }
      }
    }
  }
}
