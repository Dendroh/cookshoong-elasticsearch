{
  "index_patterns": [
    "store*"
  ],
  "settings": {
    "index": {
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "discard_punctuation": "false"
          }
        },
        "filter": {
          "my_synonym_filter": {
            "type": "synonym",
            "synonyms": [
              "피자, 핏짜, 휫짜, pizza, 알볼로"
            ]
          }
        },
        "analyzer": {
          "my_nori_analyzer": {
            "filter": [
              "lowercase",
              "trim",
              "nori_readingform",
              "nori_part_of_speech",
              "my_synonym_filter"
            ],
            "tokenizer": "my_nori_tokenizer"
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "store_id": {
        "type": "keyword"
      },
      "name": {
        "type": "text",
        "copy_to": [
          "keywordText"
        ]
      },
      "description": {
        "type": "text",
        "copy_to": [
          "keywordText"
        ]
      },
      "keywordText": {
        "type": "text",
        "analyzer": "my_nori_analyzer",
        "search_analyzer": "my_nori_analyzer"
      }
    }
  }
}
