{
  "index_patterns": [
    "store*"
  ],
  "settings": {
    "index": {
      "analysis": {
        "tokenizer": {
          "my_nori_tokenizer": {
            "type": "nori_tokenizer",
            "decompound_mode": "mixed",
            "discard_punctuation": "false",
            "user_dictionary": "analysis/userdict.txt"
          }
        },
        "filter": {
          "edge_ngram_filter_front": {
            "type": "edge_ngram",
            "min_gram": "1",
            "max_gram": "20"
          },
          "edge_ngram_filter_back": {
            "type": "edge_ngram",
            "min_gram": "1",
            "max_gram": "20",
            "side": "back"
          },
          "whitespace_remove_filter":{
            "type": "pattern_replace",
            "pattern": " ",
            "replacement": ""
          },
          "my_synonym_filter": {
            "type": "synonym",
            "synonyms_path": "analysis/synonym.txt"
          }
        },
        "char_filter": {
          "my_custom_filter": {
            "type": "pattern_replace",
            "pattern": "[^가-힣a-zA-Z0-9]",
            "replacement": ""
          }
        },
        "analyzer": {
          "jamo_ngram_front_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "trim",
              "whitespace_remove_filter",
              "lowercase",
              "jamo_filter",
              "edge_ngram_filter_front"
            ]
          },
          "ngram_analyzer": {
            "type": "custom",
            "tokenizer": "ngram_tokenizer",
            "filter": [
              "trim",
              "lowercase",
              "whitespace_remove_filter"
            ]
          },
          "chosung_ngram_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "trim",
              "whitespace_remove_filter",
              "chosung_filter",
              "edge_ngram_filter_front"
            ]
          },
          "language_convert_ngram_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "trim",
              "lowercase",
              "whitespace_remove_filter",
              "language_filter",
              "edge_ngram_filter_front"
            ]
          },
          "jamo_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "trim",
              "lowercase",
              "whitespace_remove_filter",
              "jamo_filter"
            ]
          },
          "whitespace_remove_analyzer": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "lowercase",
              "trim",
              "whitespace_remove_filter"
            ]
          },
          "my_nori_analyzer": {
            "type": "custom",
            "tokenizer": "my_nori_tokenizer",
            "filter": [
              "trim",
              "whitespace_remove_filter",
              "lowercase",
              "my_synonym_filter",
              "nori_part_of_speech",
              "nori_readingform"
            ],
            "char_filter": [
              "html_strip",
              "my_custom_filter"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
        "type": "keyword"
      },
      "store_status_code": {
        "type": "keyword"
      },
      "count_review": {
        "type": "keyword"
      },
      "count_rating": {
        "type": "keyword"
      },
      "location": {
        "type": "geo_point"
      },
      "name": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "description": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "menus": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "place": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "categories": {
        "type": "text",
        "copy_to": ["keywordText"]
      },
      "keywordText": {
        "type": "text",
        "fields": {
          "keyword_jamo" : {
            "analyzer": "jamo_ngram_front_analyzer",
            "search_analyzer": "jamo_analyzer",
            "type": "text"
          },
          "keyword_ngram": {
            "analyzer": "ngram_analyzer",
            "search_analyzer": "whitespace_remove_analyzer",
            "type": "text"
          },
          "keyword_chosung": {
            "analyzer": "chosung_ngram_analyzer",
            "search_analyzer": "whitespace_remove_analyzer",
            "type": "text"
          },
          "keyword_type": {
            "analyzer": "language_convert_ngram_analyzer",
            "search_analyzer": "whitespace_remove_analyzer",
            "type": "text"
          },
          "keyword_analyzer": {
            "analyzer": "my_nori_analyzer",
            "search_analyzer": "my_nori_analyzer",
            "type": "text"
          }
        }
      }
    }
  }
}
